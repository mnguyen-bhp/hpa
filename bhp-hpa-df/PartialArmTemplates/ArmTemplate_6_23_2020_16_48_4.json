			"properties": {
				"annotations": [],
				"type": "Sftp",
				"typeProperties": {
					"host": "http://3ovcllj73k7wk.centralus.azurecontainer.io/",
					"port": 22,
					"skipHostKeyValidation": true,
					"authenticationType": "Basic",
					"userName": "sftp_user",
					"password": {
						"type": "SecureString",
